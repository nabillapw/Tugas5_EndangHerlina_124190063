<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtnama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pasien\t     :"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:textSize="17sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/txtnama"
            android:text="Aulia Putri"
            android:textSize="17sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtmasuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal Masuk\t  :"
            android:layout_alignStart="@+id/txtnama"
            android:layout_centerVertical="true"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tglmasuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtmasuk"
            android:text="   12/3/2021"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/txtkeluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtnama"
            android:layout_alignParentBottom="true"
            android:text="Tanggal Keluar\t  :"
            android:layout_marginBottom="22dp"
            android:textSize="17sp"
            />

        <TextView
            android:id="@+id/tglkeluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtkeluar"
            android:layout_alignParentBottom="true"
            android:text="   17/3/2021"
            android:layout_marginBottom="22dp"
            android:textSize="17sp"
            />
        <Button
            android:id="@+id/edit"
            android:layout_below="@id/tglmasuk"
            android:layout_toRightOf="@id/tglkeluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:layout_marginLeft="5dp"
            />

        <Button
            android:id="@+id/delete"
            android:layout_below="@id/tglmasuk"
            android:layout_toRightOf="@id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>